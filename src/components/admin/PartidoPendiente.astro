---
interface Props {
	id: string;
    id_local: number;
    local: string;
    local_img: string;
    id_visita: number;
    visita: string;
    visita_img: string;
    resultado: Date;
    fecha_fut: string;
    fecha: Date;
}
const { id, local, visita, fecha, fecha_fut, id_local, id_visita, visita_img, local_img } = Astro.props;
const date = new Date(fecha + 'T00:00:00-05:00').toLocaleDateString('pe-PE');
---
<form action="../../api/actualizar-partido" method="post">
    <div class="bg-[#f5f5f5] w-92 gap-3 p-5 rounded rounded-md my-1 item">
        <strong>Fecha {fecha_fut}</strong>
        <hr>
        <div class="flex flex-row justify-center items-center">
            <div class="w-24 h-[150px] text-center flex flex-col justify-center items-center gap-2">
                <div class="w-[60px] h-[100px] flex justify-center items-center">
                    <img src={`../src/img/clubs/${local_img}`} alt="">
                </div>
                <input type="number" name="inputLlaveLocal" class="hidden" value={id_local} min="0">
                <span>{local}</span>
            </div>
            <div class="text-center flex flex-row gap-2 justify-center items-center">
                <input type="number" name="inputGolLocal" class="rounded rounded-md w-14 p-3 outline-none border border-gray-400" min="0"> - <input type="number" name="inputGolVisita" class="rounded rounded-md w-14 p-3 outline-none border border-gray-400" min="0">
                <input type="number" name="inputLlave" class="hidden" value={id} min="0">
            </div>
            <div class="w-24 h-[150px] text-center flex flex-col justify-center items-center gap-2">
                <div class="w-[60px] h-[100px] flex justify-center items-center">
                    <img src={`../src/img/clubs/${visita_img}`} alt="">
                </div>
                <input type="number" name="inputLlaveVisita" class="hidden" value={id_visita} min="0">
                <span>{visita}</span>
            </div>
        </div>
        <div class="text-center my-3">
            <span class="text-sm">{date}</span>
        </div>
        <div class="w-full">
            <input class="w-full outline-none p-2 rounded rounded-md bg-blue-600 text-white cursor-pointer transition-all animation-200 hover:bg-blue-800" type="submit" value="ACTUALIZAR">
        </div>
    </div>
</form>