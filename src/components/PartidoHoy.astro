---
interface Props {
	id: string;
    local: string;
    local_img: string;
    visita: string;
    visita_img: string;
    gol_local: string;
    gol_visita: string;
    fecha_fut: string;
    temp: string;
}
const { id, local, visita, gol_local, gol_visita, fecha_fut, temp, visita_img, local_img } = Astro.props;
const no_gol = "-"
---
<div class="bg-[#f5f5f5] w-92 gap-3 p-5 rounded rounded-md my-2">
    <div class="flex flex-row justify-center items-center">
        <div class="w-32 h-[150px] text-center flex flex-col justify-center items-center gap-2">
            <div class="w-[60px] h-[120px] flex justify-center items-center">
                <img src={`src/img/clubs/${local_img}`} alt="">
            </div>
            <span>{local}</span>
        </div>
        <div class="w-24 h-[150px] text-center flex justify-center items-center">
            <strong class="text-xl">{gol_local} - {gol_visita}</strong>
        </div>
        <div class="w-32 h-[150px] text-center flex flex-col justify-center items-center gap-2">
            <div class="w-[60px] h-[120px] flex justify-center items-center">
                <img src={`src/img/clubs/${visita_img}`} alt="">
            </div>
            <span>{visita}</span>
        </div>
    </div>
</div>