---
interface Props {
	id: string;
    img: string;
    nombre: string
}

const { id, img, nombre } = Astro.props;
---
<div class="bg-[#f5f5f5] w-full flex flex-col justify-center items-center p-5 rounded rounded-md md:w-80">
    <div class="w-[120px] h-52 flex justify-center items-center mb-2 hover:scale-105 transition-all animation-200">
        <a href={`/equipos/${id}`}><img src={`/src/img/clubs/${img}`} alt=""></a>
    </div>
    <div class="">
        <strong>{nombre}</strong>
    </div>
</div>